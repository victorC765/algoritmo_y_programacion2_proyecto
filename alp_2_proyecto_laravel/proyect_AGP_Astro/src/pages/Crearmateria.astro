---
import Layout from '../layouts/Layout.astro';
import Card2 from '../components/card2.astro';

---

<Layout title='Gestion academica'>
    <Card2 />
<div class="container">
    <div class="c">
         <header>
            <h1 id="title">Crear aginatura</h1>
        </header>
    <div class="form-content">
        <form>
            <div class="input-group">    
                <div class="input-field">
                    <input type="text" placeholder="Nombre de la asignatura">
                </div>
                <div class="input-field">
                    <input type="number" placeholder="Semestre">
                </div>
                <div class="input-field">
                    <input type="number" placeholder="Creditos">
                </div>
                <div class="input-field">
                    <input type="text" placeholder="Carrera">
                </div>
                </div>
                <div class="btn-field">
                    <button id="Crear" type="button">Crear</button>
                    <button id="Cancelar" type="button" class="disable">Cancelar</button>
                </div>
            </form>
      </div>
    </div>
</div>
</Layout>
        <style>
*{
    margin: 0;
    padding: 0;
    font-family: Arial, Helvetica, sans-serif;
    box-sizing: border-box;
    text-decoration: none;

}
.c{
   width: 100%;
   width: 450px;
    position: relative;
}
.container{
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center; 
}
header{
    background-color: #216EB6;
    padding: 30px;
    border-top-left-radius:25px ;
    border-top-right-radius:25px ;
    text-align: center;
    font-size: 20px;
}
.form-content{

    background-color: whitesmoke;
    padding: 60px 70px 80px;
    text-align: center;
    border-bottom-left-radius: 25px;
    border-bottom-right-radius:25px ;
}

.form-content h1{
    font-size: 30px;
    margin-bottom: 60px;
    color:black;
    position: relative;
}

.input-field{
    background-color: antiquewhite;
    margin: 25px 0;
    border-radius: 3px;
    display: flex;
    align-items: center;
    transition: max-height 05s;
}


input{
    width: 100%;
    background: transparent;
    border: 0;
    outline: none;
    padding: 18px ;
}

input::placeholder {
    color:black;
}

.btn-field{
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.btn-field button{
    flex-basis: 48%;
    font-size: 16px;
    background-color: #141551;
    color: azure;
    height: 40px;
    border-radius: 10px;
    border: 0;
    outline: 0;
    cursor: pointer;
    transition: background 1s;
}

.btn-field button.disable {
    background-color: #EAEAEA;
    color: black;
}
        </style>
</Layout>

