---
import Layout from '../layouts/Layout.astro';
import Card2 from '../components/card2.astro';

---
<Card2 />
<Layout title='xd'>
    <div class="container">
        <div class="form-content">
            <header>
                <h1 id="title">Crear aginatura</h1>
            </header>
            <form>
                <div class="input-group">
                    <div class="input-field">
                    <input type="text" placeholder="Nombre de la asignatura">
                </div>
                <div class="input-field">
                    <input type="number" placeholder="Semestre">
                </div>
                <div class="input-field">
                    <input type="number" placeholder="Creditos">
                </div>
                <div class="input-field">
                    <input type="text" placeholder="Carrera">
                </div>
                </div>
                <div class="btn-field">
                    <button id="Crear" type="button">Crear</button>
                    <button id="Cancelar" type="button" class="disable">Cancelar</button>
                </div>

            </form>
        </div>
    </div>
        <style>
*{
    margin: 0;
    padding: 0;
    font-family: Arial, Helvetica, sans-serif;
    box-sizing: border-box;
    text-decoration: none;

}
.container{
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.form-content{
    width: 100%;
    max-width: 450px;
    background-color: whitesmoke;
    padding: 50px 60px 70px;
    text-align: center;
    border-radius: 25px;
}

.form-content h1{
    font-size: 30px;
    margin-bottom: 60px;
    color:black;
    position: relative;
}

.input-field{
    background-color: antiquewhite;
    margin: 25px 0;
    border-radius: 3px;
    display: flex;
    align-items: center;
    transition: max-height 05s;
}

input{
    width: 100%;
    background: transparent;
    border: 0;
    outline: none;
    padding: 18px ;
}

input::placeholder {
    color:black;
}

.btn-field{
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.btn-field button{
    flex-basis: 48%;
    font-size: 16px;
    background-color: blue;
    color: azure;
    height: 40px;
    border-radius: 10px;
    border: 0;
    outline: 0;
    cursor: pointer;
    transition: background 1s;
}

.btn-field button.disable {
    background-color: #EAEAEA;
    color: black;
}
        </style>
</Layout>

