---
import Layout from '../layouts/Layout.astro';
import Login from '../components/login.astro';
import { Image } from 'astro:assets';

---

<Layout title="Welcome to Astro.">
	<main>
		<header class="headerContainer">
			<div class="divContainer">

			<div class="sep"> <Image src="/icons/maestro.png" alt="" width="70" height="30"/><h1 class="titulo">Gestion Academica</h1></div>
			   <div> <Image src="/icons/agregar-usuario.png" alt="icono de agregar usuario" width="70" height="30"/></div>

		    </div>
		
		</header>
		<Login class="componentl"/>
	</main>
</Layout>

<style>

	/*construci√≥n del header de el sistema lol*/ 
    .headerContainer{
		background-color: aquamarine;
		padding: 20px;
		backdrop-filter: blur(10px);
	}
	.sep{
		display: flex;
	}
	.componentl{
		justify-content: end;
	}
	.divContainer{
		display: flex;
		justify-content: space-between;
	}
	.titulo{
		font-size: 30px;
		font-family: Arial, Helvetica, sans-serif;
		padding: 20px;

	}
	
	.butbus:hover{
		background-color: rgb(86, 99, 97);
	}

	
	.lip{
		padding: 10px;
		margin: 3px;
		
	}
	.lip:hover{
		background-color: rgb(0, 231, 231);
	}
</style>
