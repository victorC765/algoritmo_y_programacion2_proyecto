---
import Layout from '../layouts/Layout.astro';
import Login from '../components/login.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<header class="headerContainer">
			<div class="divContainer">
			   <h1 class="titulo">Gestion Academica</h1>
			   <div><input class="bus" type="text" placeholder="buscar"> <button class="butbus"> b </button></div>
		    </div>
			<div>
				<nav>
					<ul class="vinculos">
						<li class="lip">inicio</li> <li class="lip">a cerca de</li>
					</ul>
				</nav>
			</div>
		</header>
		<Login/>
	</main>
</Layout>

<style>

	/*construci√≥n del header de el sistema lol*/ 
    .headerContainer{
		background-color: aquamarine;
		padding: 20px;
	}
	.divContainer{
		display: flex;
		justify-content: space-between;
	}
	.titulo{
		font-size: 30px;
		font-family: Arial, Helvetica, sans-serif;
	}
	.bus{
		height: 30px;
		width: 150px;
		border-radius: 4px;
		
	}
	.butbus{
		background-color:rgb(0, 24, 21);
		color: aliceblue;
		padding: 4px;
		width: 27px;
		border-radius: 2px ;
	}
	.butbus:hover{
		background-color: rgb(86, 99, 97);
	}

	.vinculos{
		display: flex;
		position: relative;
	}
	.lip{
		padding: 10px;
		margin: 3px;
		
	}
	.lip:hover{
		background-color: rgb(0, 231, 231);
	}
</style>
