---
import Layout from '../layouts/Layout.astro';
import Card from '../components/card.astro';
import { Image } from 'astro:assets';
---

<Card />
<Layout title="Gestion Academica">
<main >
    <div class="fond">
        <p class="par">Bienvenido Profesor Introduzca<br/>
             su cedula de identidad y contrasena</p>
    <form   class="lForm">
        <div class="ftitu">
            <h1>Entrada Al Sistema</h1>
        </div>
        <ul>
            <li> <input class="finput" type="text" placeholder="Cedula">
            </li>
            <li>
                <input class="finput" type="password" placeholder="password">
            </li>
            <li><button class="buton">registrarse</button> </li>
            <li>
                <a href="./materia.astro"><button class="buton" >ingresar</button></a>
            </li>
        </ul>
    </form>
</div>
 <a href="https://github.com/victorC765/algoritmo_y_programacion2_proyecto.git"><Image class='gite' src="/icons/github.png" alt='github' width="90" height="90"></Image></a>
</main>

</Layout>



<style>
    @import url('https://fonts.googleapis.com/css2?family=Anton&display=swap');
  
    .gite{
        position: fixed; 
    bottom:  0;      
    left:  0;
    margin: 60px;        
}
.gite:hover{
    max-width: 150;
    height: 150;
    background-color: #7000f1d8;
    padding: 12px;
    border-radius: 120px;
    
    transition:ease-in-out;
}
    
     .par{
        font-size: 200%;
        font-family: Arial, Helvetica, sans-serif;
        margin: 80px;
        color: #000808;
     }
    .fond{
        background-color: #317874;
        display: flex;
        height: 285px;
        margin-top: 60px;
        justify-content:space-between;
        

    }
   
    .lForm{
        
        background-color: #499986;
        margin-top: -40px;
        margin-bottom: 40px;
        margin-right: 15%;
        width: 100%;
        max-width: 450px;
        height: 150%;
        max-height: 500px;
        padding: 40px;
        text-align: center;
        border-top-right-radius: 60px ;
        border-bottom-left-radius: 60px;
        filter:drop-shadow(-4px 0.3rem  0.3rem);
    }
    .ftitu{
        font-size: 23px;
        font-family: "Anton", sans-serif;
        margin: 20px;

    }
    .finput{
        margin: 12px;
        color: #4a1fad;
        width: 80%;
        padding: 12px;
        border-radius: 5px;
    }
    .finput::placeholder{
        color: #000808;
    }
    .finput:hover{
        height: 50;
        width: 300;
        background-color: #2bceff;
    }
    .buton{
        margin: 9px;
        background-color: #4a1fad;
        padding: 10px;
        border-radius: 5px;
        width: 80%;
        color: aliceblue;
    }
    .buton:hover{
        padding: 20px;
        background-color: hwb(288 2% 27%);
    }

</style>

